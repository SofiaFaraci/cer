<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE devices PUBLIC "-//YARP//DTD robotInterface 1.0//EN" "http://www.icub.org/DTD/robotInterfaceV1.0.dtd">

<devices robot="CER01" build="1">
	<device name="right_upper_arm_calibrator" type="parametricCalibratorEth">
        <params file="general.xml" />
                
		<group name="GENERAL">
		    <param name="joints">  4  </param> <!-- the number of joints of the robot part -->
		    <param name="deviceName"> Right_Upper_Arm_Calibrator </param>
		</group>

<group name="HOME">
<param name="positionHome">                        0.00       5.00       </param>
<param name="velocityHome">                       10.00      10.00       </param>
</group>                                                              
                                                                      
<group name="CALIBRATION">                                            
<param name="calibrationType">                    12         12        12         12          </param>
<param name="calibration1">                      -7231       31839     0          0           </param>
<param name="calibration2">                       0          0         0          0           </param>
<param name="calibration3">                       0          0         0          0           </param>
<param name="calibration4">                       0          0         0          0           </param>
<param name="calibration5">                       0          0         0          0           </param>
<param name="calibrationZero">                    0          0         0          0           </param>
<param name="calibrationDelta">                   0          0         0          0           </param>
                                                                   
<param name="startupPosition">                   -10         10       -15         15          </param>
<param name="startupVelocity">                    10         10        10         10          </param>
<param name="startupMaxPwm">                      32000      32000     32000      32000       </param>
<param name="startupPosThreshold">                2          2         2          2           </param>
</group>

		<param name="CALIB_ORDER">(0 1 2 3)</param> 

		<action phase="startup" level="10" type="calibrate">
		    <param name="target">cer_right_upper_arm_mc_wrapper</param>
		</action>

		<action phase="interrupt1" level="1" type="park">
		    <param name="target">cer_right_upper_arm_mc_wrapper</param>
		</action>

		<action phase="interrupt3" level="1" type="abort" />

	</device>
</devices>
